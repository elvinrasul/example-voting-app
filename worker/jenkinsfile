pipeline {
    agent any

    tools{
        maven 'Maven 3.8.2'
    }

    stages { 
        stage('build') {
            steps {
                echo 'Compiling worker app'
                dir('worker'){
                    sh 'mvn compile'
                }
            }
        }
    stage('test') {
            steps { 
                echo 'Running Unit Tests on worker App'
                dir('wokrer'){
                    sh 'mvn clean test'
                }
            }
        }
    stage('package') {
            steps { 
                echo 'Prackaging worker app'
                dir('worker'){
                    sh 'mvn package -DskipTests'
                }
            }
        }
    }
    post { 
        always {
            archiveArtifacts artifacts: '**/target/*.jar', fingerprint: true
            echo 'Pipeline for worker is complete...'
        }
        failure {
            slackSend (channel: "instovate-cd", message: "Buil Failed" "Build Started - ${env.JOB_NAME} ${env.BUILD_NUMBER} (<${env.BUILD_URL}|Open>)")
        }
        success {
            slackSend (channel: "instovate-cd", message: "Buil Succeeded" "Build Started - ${env.JOB_NAME} ${env.BUILD_NUMBER} (<${env.BUILD_URL}|Open>)")
        }
        

    }
        
}